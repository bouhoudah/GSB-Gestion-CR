@model GSB_Gestion_CR.Models.Praticien

@{
    ViewData["Title"] = "Create";
}

<h1>Création</h1>

<h4>Praticien</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PraNum" class="control-label">Numéro</label>
                <input asp-for="PraNum" class="form-control" />
                <span asp-validation-for="PraNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PraNom" class="control-label">Nom</label>
                <input asp-for="PraNom" class="form-control" />
                <span asp-validation-for="PraNom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PraPrenom" class="control-label">Prénom</label>
                <input asp-for="PraPrenom" class="form-control" />
                <span asp-validation-for="PraPrenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PraAdresse" class="control-label">Addresse</label>
                <input asp-for="PraAdresse" class="form-control" />
                <span asp-validation-for="PraAdresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PraCp" class="control-label">Code Postale</label>
                <input asp-for="PraCp" class="form-control" />
                <span asp-validation-for="PraCp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PraVille" class="control-label">Ville</label>
                <input asp-for="PraVille" class="form-control" />
                <span asp-validation-for="PraVille" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PraCoefnotoriete" class="control-label">Coefficient</label>
                <input asp-for="PraCoefnotoriete" class="form-control" />
                <span asp-validation-for="PraCoefnotoriete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypCode" class="control-label"></label>
                <select asp-for="TypCode" class ="form-control" asp-items="ViewBag.TypCode"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
