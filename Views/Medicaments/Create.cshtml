@model GSB_Gestion_CR.Models.Medicament

@{
    ViewData["Title"] = "Create";
}

<h1>Création</h1>

<h4>Medicament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedDepotlegal" class="control-label">Code</label>
                <input asp-for="MedDepotlegal" class="form-control" />
                <span asp-validation-for="MedDepotlegal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedNomcommercial" class="control-label">Nom Commercial</label>
                <input asp-for="MedNomcommercial" class="form-control" />
                <span asp-validation-for="MedNomcommercial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamCode" class="control-label">Famille</label>
                <select asp-for="FamCode" class ="form-control" asp-items="ViewBag.FamCode"></select>
            </div>
            <div class="form-group">
                <label asp-for="MedComposition" class="control-label">Composition</label>
                <input asp-for="MedComposition" class="form-control" />
                <span asp-validation-for="MedComposition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedEffets" class="control-label">Effets sécondaires</label>
                <input asp-for="MedEffets" class="form-control" />
                <span asp-validation-for="MedEffets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedContreindic" class="control-label">Indications</label>
                <input asp-for="MedContreindic" class="form-control" />
                <span asp-validation-for="MedContreindic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedPrixechantillon" class="control-label">Prix</label>
                <input asp-for="MedPrixechantillon" class="form-control" />
                <span asp-validation-for="MedPrixechantillon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
